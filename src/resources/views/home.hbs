<div class="container">
  <h1>Home page</h1>
  <div class="mt-4">
    <div class="row">
      {{#each courses}}
        <div class="col-sm-6 col-lg-4">
          <div class="card card-course-item mb-2">
            <a href="/courses/{{this.slug}}">
              <img
                src="{{this.image}}"
                class="card-img-top"
                alt="{{this.name}}"
              />
            </a>
            <div class="card-body">
              <h5 class="card-title">
                <a style="text-decoration: none;" href="/courses/{{this.slug}}">
                  {{this.name}}</a>
              </h5>
              <p class="card-text">{{this.description}}</p>
              <a href="/courses/{{this.slug}}" class="btn btn-primary">Đăng ký</a>
            </div>
          </div>
        </div>
      {{/each}}

    </div>

  </div>
</div>